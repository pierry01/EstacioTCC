<h1 style="color: #e0e0e0; border-left: 5px solid #fdcb00; padding-left: 10px">
  Lanchonete
</h1>

<div class="container">
  <div class="row">
    <% @menus.each do |menu| %>
      <div class="col-sm" style="margin-top: 40px">
        <%= link_to(site_cafe_menu_path(menu)) do %>
          <div class="card" style="width: 30rem">
            <%= image_tag(menu.image, class: 'card-img-top', size: '350x350') %>
            <div class="card-body"><p class="card-text"><%= menu.title.truncate(33) %></p></div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @menus %>
</div>