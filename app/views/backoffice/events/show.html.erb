<h1>Evento: <%= @event.title %></h1>
<br>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold">Coment치rios</h6>
      <table class="table table-hover" style="margin-top: 2%" >
        <thead>
          <tr>
            <th scope="col">#</th>
            <th>Coment치rio</th>
            <th>Usu치rio</th>
            <th>Excluir</th>
          </tr>
        </thead>
        
        <tbody>
          <% @event.comments.each do |comment| %>
            <tr>
              <th scope="row"><%= comment.id %></th>
              <td><%= comment.body.truncate(30) %></th>
              <td><%= comment.user.email %></td>
              <td>
                <%= link_to site_comment_path(comment),
                class: 'btn btn-circle btn-sm', 
                data: { confirm: ("Deseja excluir #{comment.body.truncate(30)}?") },
                method: :delete do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </td>
            </tr>  
          <% end %>
        </tbody>
      </table>
    </h6>
  </div>
</div>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold">Usu치rios cadastrados</h6>
      <table class="table table-hover" style="margin-top: 2%" >
        <thead>
          <tr>
            <th scope="col">#</th>
            <th>E-mail</th>
          </tr>
        </thead>
        
        <tbody>
          <% @event.users.each do |user| %>
            <tr>
              <th scope="row"><%= user.id %></th>
              <td><%= user.email %></th>
            </tr>  
          <% end %>
        </tbody>
      </table>
    </h6>
  </div>
</div>
