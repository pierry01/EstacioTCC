<h1>Evento: <%= @event.title %></h1>

<table class="table table-hover" style="margin-top: 4%" >
  <thead>
    <tr>
      <th scope="col">#</th>
      <th>E-mail</th>
    </tr>
  </thead>
  
  <tbody>
    <% @event.users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.email %></th>
      </tr>  
    <% end %>
  </tbody>
</table>