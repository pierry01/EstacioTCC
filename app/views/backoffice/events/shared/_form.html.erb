<h1 class="page-header"><%= action %> Evento</h1><hr><hr><br>

<% if @event.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="col-lg-6">
  <%= form_for([:backoffice, @event]) do |f| %>
    <div class="row">
      <div class="col-25">
        <%= f.label 'Título: ' %>
      </div>
      <div class="col-75">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Título' %>
      </div>
    </div>
  
    
    <div class="row">
      <div class="col-25">
        <%= f.label 'Descrição: ' %>
      </div>
      <div class="col-75">
        <%= f.text_field :description, class: 'form-control', placeholder: 'Descrição' %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-25">
        <%= f.label 'Início: ' %>
      </div>
      <div class="col-75">
        <%= f.text_field :start, class: 'form-control', placeholder: 'Início' %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-25">
        <%= f.label 'Fim: ' %>
      </div>
      <div class="col-75">
        <%= f.text_field :finish, class: 'form-control', placeholder: 'Fim' %>
      </div>
    </div>
    <br><hr>
    <button type="submit" class="btn btn-primary">Salvar</button>
  <% end %>
</div>