<h1 class="page-header"><%= action %> Evento</h1><hr><br>

<% if @event.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-lg-6">
  <%= form_for([:backoffice, @event]) do |f| %>
    <div class="row">
      <div class="col-25">
        <%= f.label 'Título:' %>
      </div>
      <div class="col-75">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Título' %>
      </div>
    </div>
  
    <div class="row">
      <div class="col-25">
        <%= f.label 'Descrição:' %>
      </div>
      <div class="col-75">
        <%= f.text_area :description, class: 'form-control', rows: 3,
        placeholder: 'Descrição' %>
      </div>
    </div>
    
    <br>
    
    <div class="row">
      <div class="col-25">
        <%= f.label 'Início:' %>
      </div>
      <div class="col-75">
        <%= f.text_field :start, class: 'form-control', id: 'datetimepicker1', 
        value: (l(@event.start, format: '%d/%m/%Y %H:%M') unless @event.start.blank?) %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-25">
        <%= f.label 'Fim:' %>
      </div>
      <div class="col-75">
        <%= f.text_field :finish, class: 'form-control', id: 'datetimepicker2',
        value: (l(@event.finish, format: '%d/%m/%Y %H:%M') unless @event.finish.blank?) %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-25">
        <%= f.label 'Imagem: ' %>
      </div>
      <div class="col-75">
        <%= f.file_field :image %>
      </div>
    </div><br>
    
    <%= f.submit 'Salvar', class: 'float-left btn btn-primary' %><br><br><br>
  <% end %>
</div>

<%= render partial: 'backoffice/events/shared/datetimepicker' %>