<h1>Eventos</h1>

<table class="table table-hover" style="margin-top: 4%" >
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Start</th>
      <th scope="col">Finish</th>
      <th scope="col">
        <%= link_to 'Novo', new_backoffice_event_path %>
      </th>
    </tr>
  </thead>
  
  <tbody>
    <% @events.each do |event| %>
      <tr data-href="site.com/whatever">
        <th scope="row"><%= event.id %></th>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.start %></td>
        <td><%= event.finish %></td>
        <td>
          <%= link_to 'Editar', edit_backoffice_event_path(event) %>
          <%= link_to 'Excluir', backoffice_event_path(event), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>