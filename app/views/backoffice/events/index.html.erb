<h1>Eventos</h1>

<table class="table table-hover" style="margin-top: 4%" >
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Start</th>
      <th scope="col">Finish</th>
      <th scope="col">
        <%= link_to new_backoffice_event_path, 
        class: 'btn btn-success btn-circle btn-sm' do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <th scope="row"><%= event.id %></th>
        <td><%= event.title %></td>
        <td><%= event.start %></td>
        <td><%= event.finish %></td>
        <td>
          <%= link_to backoffice_event_path(event), 
          class: 'btn btn-circle btn-sm' do %>
            <i class="fas fa-eye"></i>
          <% end %>
          
          <%= link_to edit_backoffice_event_path(event), 
          class: 'btn btn-circle btn-sm' do %>
            <i class="fas fa-edit"></i>
          <% end %>
          
          <%= link_to backoffice_event_path(event),
          class: 'btn btn-circle btn-sm', 
          data: { confirm: ("Deseja excluir #{event.title}?") },
          method: :delete do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>