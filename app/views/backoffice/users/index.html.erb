<h1>Usu√°rios</h1>

<table class="table table-hover" style="margin-top: 4%" >
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">E-mail</th>
      <th scope="col">
        <%= link_to new_backoffice_user_path,
        class: 'btn btn-success btn-circle btn-sm' do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
      <tr data-href="site.com/whatever">
        <th scope="row"><%= user.id %></th>
        <td><%= user.email %></td>
        <td>
          <%= link_to backoffice_user_path(user), 
          class: 'btn btn-circle btn-sm' do %>
            <i class="fas fa-eye"></i>
          <% end %>
          
          <%= link_to edit_backoffice_user_path(user),
          class: 'btn btn-circle btn-sm' do %>
            <i class="fas fa-edit"></i>
          <% end %>
          
          <%= link_to backoffice_user_path(user), 
          class: 'btn btn-circle btn-sm', 
          data: { confirm: ("Deseja excluir #{user.email}?") },
          method: :delete do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center">
  <%= paginate @users %>
</div>