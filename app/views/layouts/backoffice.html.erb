<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title>EstacioTCC</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag 'backoffice', media: 'all' %>
  
  <%= javascript_include_tag  'application' %>
  <%= javascript_include_tag  'backoffice' %>
</head>

<body id="page-top">
  <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
    <ul class="navbar-nav ml-auto ml-md-0" style="margin-left: 0">
      <li class="nav-item dropdown no-arrow float-right ">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= current_admin.email %>
          <i class="fas fa-user-circle fa-fw"></i>
        </a>
        
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
          <div class="dropdown-divider"></div>
          <%= link_to 'Sair', destroy_admin_session_path, class: 'dropdown-item',
            data: {toggle: 'modal', darget: '#logoutModal'}, method: :delete %>
        </div>
      </li>
    </ul>
  </nav>

  <div id="wrapper">
    <ul class="sidebar navbar-nav">
      <li class="nav-item">
        <%= link_to(backoffice_path, class:'nav-link') do %>
          <i class="fas fa-fw fa-tachometer-alt"></i>
          <span>Dashboard</span>
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to(backoffice_items_path, class:'nav-link') do %>
          <i class="fas fa-box-open"></i>
          <span>Estoque</span>
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to(backoffice_menus_path, class:'nav-link') do %>
          <i class="fas fa-utensils"></i>
          <span>Cardápios</span>
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to(backoffice_events_path, class:'nav-link') do %>
          <i class="fas fa-list"></i>
          <span>Eventos</span>
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to(backoffice_users_path, class:'nav-link') do %>
          <i class="fas fa-users"></i>
          <span>Usuários</span>
        <% end %>
      </li>
    </ul>

    <div id="content-wrapper">
      <div class="container-fluid">
        <%= yield %>
      </div>

      <footer class="sticky-footer">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright © Estácio TCC - 2019</span>
          </div>
        </div>
      </footer>
    </div>
  </div>

  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>
  <%= alertify_flash %>
</body>
</html>